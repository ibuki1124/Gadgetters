<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div>
    <h2>プロフィール</h2>
    <p><%= @user.name %></p>
    <p><%= attachment_image_tag @user, :icon_image, fallback: "def_user.png", size: "100x100" %></p>
    <p><%= @user.introduction %></p>
    <%= link_to "新規投稿", new_gadget_path %>
    <%= link_to "プロフィール編集", edit_user_path(@user) %>
  </div>
  <div>
    <h2>投稿</h2>
    <% @gadgets.each do |gadget| %>
      <p><%= gadget.title %></p>
      <p><%= gadget.body %></p>
      <p><%= attachment_image_tag gadget, :gadget_image, fallback: "def_gadget.jpg" ,size: "300x300" %></p>
      <%= link_to "詳細", gadget_path(gadget) %>
    <% end %>
  </div>
</main>