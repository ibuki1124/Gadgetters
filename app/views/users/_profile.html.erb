<div class="col-md-6 col-lg-3 mx-auto border-right border-left mb-3">
  <div class="text-center">
    <h3>プロフィール</h3>
    <hr>
    <p><%= user.name %></p>
    <p><%= attachment_image_tag user, :icon_image, fallback: "def_user.png", size: "150x150", class: "border" %></p>
  </div>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-block btn-secondary mb-3 mt-3" do %>
      <i class="fas fa-user-cog"></i>
      プロフィール編集
    <% end %>
  <% end %>
  <h4>自己紹介</h4>
  <div class="mt-3"><%= simple_format(h(user.introduction)) %></div>
</div>