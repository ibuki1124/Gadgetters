<div class="container">
  <div class="row">
    <%= render "users/profile", user: @user %>
    <div class="col-md-6 col-lg-8 mx-auto">
      <h3>詳細</h3>
      <hr>
      <div class="card">
        <h4 class="text-center mt-2 mb-0 font-weight-bold"><%= @gadget.title %></h4>
        <hr>
        <div class="card-body">
          <div class="row">
            <div class="col-10 col-lg-7 col-xl-6 mx-auto">
              <%= attachment_image_tag @gadget, :gadget_image, fallback: "def_gadget.jpg" , class: "img-fluid" %>
            </div>
            <div class="col-10 col-lg-5 col-xl-6 mx-auto">
              <h5><u>説明</u></h5>
              <%= simple_format(h(@gadget.body)) %>
            </div>
          </div>
          <div class="row mt-3 ml-3">
            <a class="btn btn-primary btn-sm mr-3" role="button"onclick="history.back(-1)">
              <h6 class="my-1"><i class="fas fa-arrow-left"></i>戻る</h6>
            </a>
            <% if @user == current_user %>
              <%= link_to gadget_path(@gadget), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm text-light" do %>
                <h6 class="my-1"><i class="fas fa-trash"></i>削除</h6>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>