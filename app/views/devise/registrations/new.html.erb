<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-6">
      <div class="card mt-5">
        <div class="card-body">
          <div class="row">
            <div class="mx-auto mb-1 text-center">
              <%= image_tag 'gadgetters_logo.png', class: "rounded-circle border", size: "50x50" %>
            </div>
          </div>
          <h2 class="card-title text-center mb-4 mt-1">サインアップ</h2>
          <p class="text-success text-center">新しくアカウントを作成します</p>
          <hr>
          <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "お名前（15文字以内）", maxlength: "15" %>
              </div>
            </div>
            <div class="field form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
              </div>
            </div>
          
            <div class="field form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード（6文字以上）" %>
              </div>
            </div>
          
            <div class="field form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "もう一度パスワードを入力してください" %>
              </div>
            </div>
          
            <div class="actions">
              <%= f.submit "サインアップ", class:"btn btn-info btn-lg btn-block" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>