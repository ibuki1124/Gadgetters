<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-5">
      <div class="card mt-5">
        <div class="card-body">
          <div class="row">
            <div class="mx-auto mb-1 text-center">
              <%= image_tag 'gadgetters_logo.png', class: "rounded-circle border", size: "50x50" %>
            </div>
          </div>
          <h2 class="card-title text-center mb-4 mt-1">ログイン</h2>
          <hr>
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="field form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "お名前" %>
              </div>
            </div>
          
            <div class="field form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
              </div>
            </div>
          
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          
            <div class="actions">
              <%= f.submit "ログイン", class:"btn btn-success btn-lg btn-block" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
